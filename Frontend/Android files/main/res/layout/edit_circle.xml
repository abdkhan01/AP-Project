<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="@dimen/margin_left_2"
        android:layout_marginTop="@dimen/margin_top_2">

        <ImageView
            android:id="@+id/circle_logo"
            android:layout_width="@dimen/image_width_40"
            android:layout_height="@dimen/image_height_40"
            android:layout_marginStart="@dimen/margin_left_10"
            android:layout_marginTop="@dimen/margin_top_10"
            android:src="@mipmap/ic_launcher" />

        <EditText
            android:id="@+id/_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/circle_logo"
            android:inputType="text"
            android:text="@string/circle_name"
            android:textColor="@color/md_black_1000"
            android:textSize="@dimen/text_size_17_25_33"
            android:layout_marginStart="@dimen/margin_left_5"/>

        <TextView
            android:id="@+id/circle_member_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="@string/circle_members"
            android:textSize="@dimen/text_size_14_22_30"
            android:layout_marginStart="@dimen/margin_left_5"
            android:textColor="@color/md_black_1000" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="82dp">

        <Button
            android:id="@+id/delete_button"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@color/md_grey_500"
            android:textSize="@dimen/text_size_14_22_30"
            android:textColor="@color/md_white_1000"
            android:text="@string/delete"
            android:layout_marginStart="@dimen/margin_left_16"
            android:layout_marginEnd="@dimen/margin_right_16"
            android:layout_marginBottom="@dimen/margin_bottom_16"/>



        <android.support.v7.widget.RecyclerView
            android:id="@+id/edit_circle_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_left_5"
            android:layout_marginEnd="@dimen/margin_right_5"
            android:layout_marginBottom="0dp">

        </android.support.v7.widget.RecyclerView>


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>