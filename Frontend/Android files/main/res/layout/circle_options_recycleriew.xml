<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_logo"
        android:layout_width="@dimen/circle_image_width_30"
        android:layout_height="@dimen/circle_image_height_30"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/circleoptions_circle_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/circle_name"
        android:layout_toRightOf="@+id/circle_logo"
        android:layout_marginStart="@dimen/margin_left_5"
        android:textSize="@dimen/text_size_16_24_32"
        android:textColor="@color/md_black_1000"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/members_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/circleoptions_circle_name_tv"
        android:layout_below="@+id/circleoptions_circle_name_tv"
        android:text="@string/string"
        android:textSize="@dimen/text_size_10_18_26" />


</RelativeLayout>